<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width = "fill_parent"
    android:layout_height = "fill_parent"
    android:layout_weight = "1"
    android:background = "#00FFFF"
    android:gravity = "center"
    android:orientation = "vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.1"
        android:orientation = "vertical">
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="0.3"
            android:background = "#00FFFF"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation = "horizontal">
            
            <ImageView
                android:id="@+id/imgSmallProfile"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.125"
                android:background="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/profile_image">
            </ImageView>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.875"
                android:background="#00FFFF"
                android:orientation="horizontal"
                android:gravity = "center">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.75">
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnEditProfile"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.125"
                    android:background = "#00FFFF"
                    android:src ="@drawable/edit_profile"/>
            </LinearLayout>
            
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="0.3"
            android:background = "#FFFFFF"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:orientation = "horizontal">

            <ImageView
                android:id="@+id/imgBigProfile"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.4"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/profile_image"/>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnFavorList"
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_weight="5"
                    android:layout_marginRight = "20dp"
                    android:layout_marginLeft = "20dp"
                    android:layout_marginTop = "20dp"
                    android:layout_marginBottom = "10dp"
                    android:textColor = "#FFFFFF"
                    android:textStyle="bold"
                    android:text = "FAVOR LIST"
                    android:gravity = "center"
                    android:background="#4F81BD" />

                <Button
                    android:id="@+id/btnAlbum"
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_weight="5"
                    android:layout_marginRight = "20dp"
                    android:layout_marginLeft = "20dp"
                    android:layout_marginTop = "10dp"
                    android:layout_marginBottom = "20dp"
                    android:textColor = "#FFFFFF"
                    android:textStyle="bold"
                    android:text = "ALBUM"
                    android:gravity = "center"
                    android:background="#4F81BD" />

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="0.25"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.05"
                android:background="#FFCCCCCC"
                android:orientation="horizontal"
                android:gravity = "center">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="RESPONDED CONTACT"
                    android:textStyle="bold"
                    android:textColor = "#FFFFFF"
                    android:textAlignment="center"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:id="@+id/resContact">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="0.25"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.05"
                android:background="#FFCCCCCC"
                android:gravity="center">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="NEW CONTACT"
                    android:textStyle="bold"
                    android:textColor = "#FFFFFF"
                    android:textAlignment="center"
                    android:gravity="center_vertical|center_horizontal" />
             </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:id="@+id/newContact">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.1"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#00FFFF"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnFind"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#00FFFF"
            android:src="@drawable/find"/>

        <ImageButton
            android:id="@+id/btnSetting"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#00FFFF"
            android:src="@drawable/setting"/>

    </LinearLayout>

</LinearLayout>
