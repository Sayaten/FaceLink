<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width = "fill_parent"
    android:layout_height = "fill_parent"
    android:layout_weight = "1"
    android:background = "#00FFFF"
    android:gravity = "center"
    android:orientation = "vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.1"
        android:orientation = "vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="0.3"
            android:background = "#00FFFF"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation = "horizontal">

            <ImageView
                android:id="@+id/imgSmallProfile"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.125"
                android:background="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/profile_image">
            </ImageView>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="0.875"
                android:background="#00FFFF"
                android:orientation="horizontal"
                android:gravity = "center">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.75">
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnEditProfile"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.125"
                    android:background = "#00FFFF"
                    android:src ="@drawable/edit_profile"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="0.25"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.1"
                android:background="#FFCCCCCC"
                android:orientation="horizontal"
                android:gravity = "center">

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="SHAPE"
                    android:id="@+id/btnShape"
                    android:textSize="10dp" />

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="EYES"
                    android:id="@+id/btnEyes"
                    android:textSize="10dp" />

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="NOSE"
                    android:id="@+id/btnNose"
                    android:textSize="10dp" />

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="MOUTH"
                    android:id="@+id/btnMouth"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.9"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_weight="0.1"
                    android:background="#FFCCCCCC"
                    android:orientation="horizontal"
                    android:gravity="center" >

                    <Button
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="+"
                        android:id="@+id/btnPlus"
                        android:textSize="10dp" />

                    <Button
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="-"
                        android:id="@+id/btnMinus"
                        android:textSize="10dp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_weight="0.7"
                    android:layout_margin="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ShapeView"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/EyesView"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/NoseView"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/MouthView"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ResultView"
                        android:layout_gravity="center" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_weight="0.1"
                    android:background="#FFCCCCCC"
                    android:orientation="horizontal"
                    android:gravity="center" >

                    <Button
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="UP"
                        android:id="@+id/btnUp"
                        android:textSize="10dp" />

                    <Button
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="DOWN"
                        android:id="@+id/btnDown"
                        android:textSize="10dp" />

                    <Button
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="RIGHT"
                        android:id="@+id/btnRight"
                        android:textSize="10dp" />

                    <Button
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:text="LEFT"
                        android:id="@+id/btnLeft"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0px"
                android:layout_weight="0.1"
                android:orientation="horizontal"
                android:gravity = "center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CREATE"
                    android:id="@+id/btnCreate"
                    android:textSize="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button6" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.1"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="#00FFFF"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnFind"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#00FFFF"
            android:src="@drawable/find"/>

        <ImageButton
            android:id="@+id/btnSetting"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#00FFFF"
            android:src="@drawable/setting"/>

    </LinearLayout>

</LinearLayout>
